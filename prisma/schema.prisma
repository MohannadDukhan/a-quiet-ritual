generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  email         String    @unique
  passwordHash  String?
  emailVerified DateTime?
  role          UserRole  @default(USER)
  collectiveBanned Boolean @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  entries       Entry[]
  collectiveReplies CollectiveReply[]
}

model Prompt {
  id        String   @id @default(uuid()) @db.Uuid
  text      String   @unique
  createdAt DateTime @default(now())
  entries   Entry[]
}

enum EntryType {
  PROMPT
  JOURNAL
}

enum UserRole {
  USER
  ADMIN
}

model Entry {
  id                    String    @id @default(uuid()) @db.Uuid
  userId                String    @db.Uuid
  promptId              String?   @db.Uuid
  type                  EntryType @default(PROMPT)
  promptTextSnapshot    String
  content               String
  isCollective          Boolean   @default(false)
  collectivePublishedAt DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  prompt                Prompt?   @relation(fields: [promptId], references: [id], onDelete: Restrict)
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  collectiveReplies     CollectiveReply[]

  @@index([userId, createdAt])
  @@index([promptId])
}

model CollectiveReply {
  id        String   @id @default(cuid())
  entryId   String   @db.Uuid
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  userId    String?  @db.Uuid
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  content   String
  createdAt DateTime @default(now())

  @@index([entryId, createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@unique([token])
}

model EmailVerificationToken {
  id         String   @id @default(cuid())
  identifier String
  tokenHash  String
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, tokenHash])
  @@index([identifier, expires])
}

model PasswordResetToken {
  id         String   @id @default(cuid())
  identifier String
  tokenHash  String
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, tokenHash])
  @@index([identifier, expires])
}

model RateLimitBucket {
  key         String   @id
  count       Int
  windowStart DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([windowStart])
}
